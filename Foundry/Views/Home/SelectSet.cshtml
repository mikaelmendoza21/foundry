@{
    List<ChiefOfTheFoundry.Models.MtgSet> sets = ViewBag.Sets;
    string metacardId = ViewBag.MetacardId;
    string cardName = ViewBag.CardName;
}
<div>
    <h1>@cardName</h1>
    <h3>Select your card's Set</h3>
    @foreach (ChiefOfTheFoundry.Models.MtgSet set in sets)
    {
        <div class="row">
            <div class="container">
                <a href="reviewToAdd?metacardId=@metacardId&setId=@set.Id&cardName=@System.Web.HttpUtility.HtmlEncode(cardName)">
                    @set.Name
                    <i class="ss ss-@set.Code.ToLower()"></i>
                </a>
            </div>
        </div>
    }
</div>